    <script>
        // Dynamic footer messages
        const footerMessages = [
            "üåà Imagination Station",
            "üöÄ Next-Level Interaction",
            "üéØ Perfect Precision",
            "üí° Bright Ideas",
            "üåü Stellar Performance"
        ];

        const footer = document.querySelector('.footer');
        setInterval(() => {
            footer.innerHTML = footerMessages.sort(() => Math.random() - 0.5)
                .map(msg => `<span>${msg}</span>`).join('');
        }, 3000);

        // Interactive cursor effects
        document.addEventListener('mousemove', (e) => {
            const shine = document.querySelectorAll('.shine');
            shine.forEach(shine => {
                shine.style.left = `${e.clientX}px`;
                shine.style.top = `${e.clientY}px`;
            });
        });
    </script>
