            color: white;
            overflow: hidden;
        }

        .footer span {
            animation: float 8s infinite linear;
            opacity: 0.8;
        }

        @keyframes float {
            0% { transform: translateX(100vw) }
            100% { transform: translateX(-100%) }
        }

        .logo-box {
            position: fixed;
            top: 20px;
            right: 20px;
            width: 60px;
            height: 60px;
